{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "declaration": false,
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "global/*": [
        "src/global/*"
      ],
      "app": [
        "src/app"
      ],
      "views/*": [
        "src/app/views/*"
      ],
      "common/*": [
        "src/app/common/*"
      ],
      "data/*": [
        "src/app/data/*"
      ],
      "images/*": [
        "src/app/images/*"
      ]
    }
  }
}